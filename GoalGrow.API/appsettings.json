{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Information"
    }
  },
  "AllowedHosts": "*",
  "Keycloak": {
    "Audience": "goalgrow-api",
    "ClientId": "goalgrow-api",
    "RequireHttpsMetadata": false,
    "ValidateIssuer": true,
    "ValidateAudience": true,
    "ValidateLifetime": true,
    "ClockSkew": 0
  },
  "Cors": {
    "AllowedOrigins": [
      "https://localhost:7001",
      "http://localhost:7000"
    ]
  },
  "AppSettings": {
    "PlatformFeePercentage": 1.00,
    "MinimumPlatformFee": 1.00,
    "InvestmentUnlockThreshold": 5000.00,
    "DefaultCurrency": "EUR"
  }
}
